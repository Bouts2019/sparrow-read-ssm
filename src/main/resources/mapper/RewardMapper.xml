<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.martini.sparrow.mapper.RewardMapper">
    <update id="add">
        update t_user set coin = coin + #{num} where uid = #{id}
    </update>
    <update id="reduce">
        update t_user set coin = coin - #{num} where uid = #{id}
    </update>
</mapper>